<h1>Edit {{course.title}}</h1>
<form class="course-form" action="/courses/edit" method="POST">
  <div class="input-field">
    <input
      id="title"
      name="title"
      type="text"
      class="validate"
      required
      value="{{course.title}}"
    />
    <label for="title">Course Name</label>
    <span class="helper-text" data-error="Type Course Name"></span>
  </div>

  <div class="input-field">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      required
      min="1"
      value="{{course.price}}"
    />
    <label for="price">Course Price</label>
    <span class="helper-text" data-error="Type Course Price"></span>
  </div>

  <div class="input-field">
    <input
      id="img"
      name="img"
      type="text"
      class="validate"
      required
      value="{{course.img}}"
    />
    <label for="img">Course Image</label>
    <span class="helper-text" data-error="Type Course Image"></span>
  </div>

  <input type="hidden" name="id" value="{{course._id}}" />

  <button class="btn btn-primary" type="submit">Edit Course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course._id}}" />
  <button class="btn red">Delete Course</button>
</form>